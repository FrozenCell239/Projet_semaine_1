{% extends 'base.html.twig' %}
{% block title %}Détails du post{% endblock %}
{% block body %}
    <h1>Post</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_post_index') }}">Retour à la liste</a>
    <a href="{{ path('app_post_edit', {'id': post.id}) }}">Modifier</a>
    {{ include('post/_delete_form.html.twig') }}
    {% for image in post.images %}
        <div style="display: inline-block; margin: 10px;">
            <img
                src="{{ asset('assets/uploads/posts/' ~ image.name) }}"
                alt="{{ image.name }}"
                width="250"
            ></img>
        </div>
    {% endfor %}
{% endblock %}