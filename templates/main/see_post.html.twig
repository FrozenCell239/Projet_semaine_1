{% extends 'base.html.twig' %}
{% block title %}{{ post.title }}{% endblock %}
{% block body %}
<article>
    <h1>{{ post.title }}</h1>
    <summary>{{ post.summary }}</summary>
    <p>{{ post.content }}</p>
    <p>Post√© le {{ post.createdAt|date("d/m/Y") }} par {{ post.author.nickname }}</p>
    <div style="display: flex; flex-wrap: wrap;">
    {% for image in post.images %}
        <div style="display: inline-block; margin: 10px;">
            <img
                src="{{ asset('assets/uploads/posts/' ~ image.name) }}"
                alt="{{ image.name }}"
                width="250"
            ></img>
        </div>
    {% endfor %}
    </div>
</article>
{% endblock %}